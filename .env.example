# PostgreSQL Configuration
POSTGRES_USER=raguser
POSTGRES_PASSWORD=ragpassword
POSTGRES_DB=rag_db
POSTGRES_URL=postgresql://raguser:ragpassword@localhost:5432/rag_db

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Optional: Qdrant Cloud
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your-api-key

# Embedding Configuration
DENSE_MODEL=BAAI/bge-base-en-v1.5

# Optional: OpenAI (if using OpenAI embeddings)
# OPENAI_API_KEY=sk-your-key-here

# ColPali (visual document understanding)
# Enabled by default for documents with images/tables
ENABLE_COLPALI=true

# Google Gemini (for VLM answer generation)
# Required for the /ask endpoint
GOOGLE_API_KEY=your-google-api-key-here
VLM_MODEL=gemini-2.0-flash-exp

# API Configuration
LOG_LEVEL=INFO
