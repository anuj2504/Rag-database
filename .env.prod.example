# ============================================================================
# Production Environment Configuration
# ============================================================================
# Copy this file to .env.prod and fill in your values
# Usage: docker-compose -f docker-compose.prod.yml --env-file .env.prod up -d
# ============================================================================

# ============================================================================
# DOCKER REGISTRY (Optional - for pushing to container registry)
# ============================================================================
DOCKER_REGISTRY=your-registry.azurecr.io/
VERSION=1.0.0

# ============================================================================
# POSTGRESQL DATABASE (External Managed)
# ============================================================================
# AWS RDS Example:
# POSTGRES_URL=postgresql://user:password@your-db.xxx.rds.amazonaws.com:5432/rag_db

# Azure Database for PostgreSQL:
# POSTGRES_URL=postgresql://user:password@your-db.postgres.database.azure.com:5432/rag_db

# Google Cloud SQL:
# POSTGRES_URL=postgresql://user:password@/rag_db?host=/cloudsql/project:region:instance

POSTGRES_URL=postgresql://raguser:CHANGE_THIS_PASSWORD@your-postgres-host:5432/rag_db

# ============================================================================
# QDRANT VECTOR DATABASE (External Managed)
# ============================================================================
# Option 1: Qdrant Cloud (Recommended for production)
QDRANT_URL=https://your-cluster-id.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key

# Option 2: Self-hosted Qdrant (uncomment and use instead)
# QDRANT_HOST=your-qdrant-host.example.com
# QDRANT_PORT=6333

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_COLPALI=true
PARSING_STRATEGY=hi_res

# ============================================================================
# EMBEDDING MODELS
# ============================================================================
DENSE_MODEL=BAAI/bge-base-en-v1.5
COLPALI_MODEL=vidore/colpali-v1.2

# Optional: OpenAI API Key (for ada embeddings)
# OPENAI_API_KEY=sk-your-openai-api-key

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
WORKERS=4
CHUNK_SIZE=512
CHUNK_OVERLAP=50
PORT=8000

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
